          code:`// pseudo: simpan anotasi polygon ke JSON\nconst anno = {type:'polygon', points:[[x1,y1],[x2,y2],...]};\nlocalStorage.setItem('anno', JSON.stringify(anno));`},
        { id:'demo-nlp', title:'Demo: Ekstrak Entitas dari Log',
          desc:'Regex + kamus istilah teknik untuk menandai komponen & gejala di log free‑text (simulasi).',
