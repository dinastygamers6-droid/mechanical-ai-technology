      // -------- STATE/UTIL --------
      const state={route:'home',query:'',tag:'',readingId:null};
      const fmtDate=(iso)=>new Date(iso).toLocaleDateString();
      const FALLBACK_IMG='https://placehold.co/1200x675?text=Mechanical+AI+Copywriting';
      const el=(tag,attrs={},children=[])=>{const n=document.createElement(tag);if(tag==='img'){n.loading='lazy';n.referrerPolicy='no-referrer';n.addEventListener('error',()=>{n.src=FALLBACK_IMG;});}
        Object.entries(attrs).forEach(([k,v])=>{if(k==='class')n.className=v;else if(k==='innerHTML')n.innerHTML=v;else if(k.startsWith('on'))n.addEventListener(k.slice(2),v);else if(k==='data-goto')n.dataset.goto=v;else n.setAttribute(k,v)});children.forEach(c=>n.append(c));return n};
      const byId=(id)=>POSTS.find(p=>p.id===id);
      const filterPosts=()=>POSTS.filter(p=>{const q=state.query.trim().toLowerCase();const okText=!q||p.title.toLowerCase().includes(q)||p.excerpt.toLowerCase().includes(q)||p.body.toLowerCase().includes(q);const okTag=!state.tag||p.tags.includes(state.tag);return okText&&okTag});

      // -------- VIEWS --------
      function HeaderActions(){
        document.querySelectorAll('[data-nav]').forEach(btn=>btn.addEventListener('click',()=>{state.route=btn.dataset.nav;state.readingId=null;render()}));
        document.querySelectorAll('[data-goto]').forEach(btn=>btn.addEventListener('click',()=>{state.route=btn.dataset.goto;state.readingId=null;render()}));
        const toggle=document.getElementById('toggle-theme');
        if(toggle){toggle.addEventListener('click',()=>{const html=document.documentElement;const dark=html.classList.toggle('dark');localStorage.setItem('theme',dark?'dark':'light')});const pref=localStorage.getItem('theme');if(pref==='dark')document.documentElement.classList.add('dark');}
      }

      function HomeView(){
        const wrap=el('section',{class:'container mx-auto px-4 py-10 space-y-10'});
        const hero=el('div',{class:'grid md:grid-cols-2 gap-6 items-stretch'},[
          el('div',{class:'card p-6'},[
            el('h2',{class:'text-2xl md:text-3xl font-bold'},['Artikel Terbaru']),
            el('p',{class:'muted mt-3'},['Kumpulan tulisan dan template yang bisa langsung kamu pakai untuk proyek mechanical AI.']),
            el('div',{class:'mt-6'},[
              ...POSTS.slice(0,3).map(p=>el('div',{class:'flex items-start gap-4 mb-3'},[
                el('img',{src:p.hero,alt:'thumb',class:'w-28 h-20 rounded-xl object-cover border'}),
                el('div',{},[
                  el('a',{href:'#',class:'font-semibold hover:underline',onClick:(e)=>{e.preventDefault();state.readingId=p.id;render();}},[p.title]),
                  el('p',{class:'text-sm muted line-clamp-2'},[p.excerpt])
                ])
              ]))
            ])
          ]),
          el('div',{},[NewsletterCard()])
        ]);

        const search=el('div',{class:'card'},[
          el('div',{class:'p-6 border-b'},[el('h2',{class:'text-lg font-semibold'},['Cari Artikel'])]),
          el('div',{class:'p-6'},[
            el('div',{class:'flex flex-col md:flex-row gap-3'},[
              el('input',{value:state.query,placeholder:'Cari: Predictive, Vision, NLP, Whitepaper, Landing Page',class:'w-full px-3 py-2 rounded-2xl border',onInput:(e)=>{state.query=e.target.value;render();}}),
              el('div',{class:'flex flex-wrap gap-2'},[
                ...['Predictive','Vibration','Oil Analysis','Mining','Vision','Quality','Manufacturing','NLP','CMMS','Text Mining','Optimization','Routing','Fuel','Copywriting','Whitepaper','Landing Page','Email'].map(t=>TagChip(t))
              ])
            ]),
            el('div',{class:'mt-6 grid gap-6 md:grid-cols-2 lg:grid-cols-3'},[
              ...filterPosts().map(PostCard),
              ...(filterPosts().length===0?[el('div',{class:'muted text-sm'},['Tidak ada hasil. Coba kata kunci lain.'])]:[])
            ])
          ])
        ]);

        wrap.append(hero,search);return wrap;
      }

