            WorkCard('Fleet Mining — PdM','https://images.unsplash.com/photo-1533660876120-ecf3f19e2b18?q=80&w=1200&auto=format&fit=crop','Downtime −32%, parts −18% (simulasi site tambang).'),
            WorkCard('Vision QA — Manufaktur','https://images.unsplash.com/photo-1581092334651-ddf26d9a09d6?q=80&w=1200&auto=format&fit=crop','mAP@0.5 0.92, FPR 3.1%, latensi 28 ms (mock).'),
            WorkCard('NLP Log — CMMS','https://images.unsplash.com/photo-1518779578993-ec3579fee39f?q=80&w=1200&auto=format&fit=crop','Topic modeling + entity extraction untuk root cause.')
          ])
        ]);
      }

      function AboutView(){
        return el('section',{class:'container mx-auto px-4 py-10 max-w-3xl'},[
          el('h2',{class:'text-2xl font-bold mb-4'},['Tentang']),
          el('p',{class:'muted'},['Saya copywriter profesional yang mengkhususkan diri pada mechanical engineering & AI—mengubah data teknis menjadi narasi yang jelas, kredibel, dan mendorong konversi.']),
          el('ul',{class:'list-disc pl-6 muted mt-4 space-y-1'},[
            el('li',{},['Bidang: predictive maintenance, computer vision QA, NLP untuk CMMS, digital twin.']),
            el('li',{},['Output: whitepaper, case study, landing page, email sequence, artikel teknis SEO.']),
            el('li',{},['Workflow: riset singkat → outline → draf → review teknis → final desain.'])
          ])
        ]);
      }

      function ContactView(){
        return el('section',{class:'container mx-auto px-4 py-10 max-w-3xl'},[
          el('h2',{class:'text-2xl font-bold mb-4'},['Kontak']),
          el('p',{class:'muted'},['Butuh copy yang presisi teknis dan tetap menjual? Kirim pesan.']),
          el('form',{class:'mt-4 grid gap-3 max-w-lg',action:'https://formspree.io/f/xxxx',method:'POST'},[
            el('input',{name:'name',placeholder:'Nama',class:'rounded-2xl border px-3 py-2',required:true}),
            el('input',{name:'email',placeholder:'Email',type:'email',class:'rounded-2xl border px-3 py-2',required:true}),
            el('textarea',{name:'message',placeholder:'Ceritakan kebutuhan Anda',class:'rounded-2xl border px-3 py-2 h-28'}),
            el('button',{class:'btn'},['Kirim'])
          ]),
          el('p',{class:'text-xs muted mt-2'},['Ganti kode Formspree "xxxx" dengan ID form kamu agar aktif.'])
        ]);
      }

      // -------- PARTIALS --------
      const TagChip=(t)=>el('button',{class:`tag ${state.tag===t?'bg-black text-white border-black':'bg-white text-slate-700'}`,onClick:()=>{state.tag=(state.tag===t?'':t);render();}},[t]);
      const PostCard=(p)=>el('div',{class:'card overflow-hidden hover:shadow-lg transition'},[
        el('div',{class:'aspect-video w-full bg-slate-100 overflow-hidden'},[
          el('img',{src:p.hero,alt:p.title,class:'w-full h-full object-cover'})
        ]),
        el('div',{class:'p-5'},[
          el('h3',{class:'text-lg font-semibold'},[p.title]),
          el('div',{class:'muted text-sm flex items-center gap-3 mt-1'},[
            el('span',{},[fmtDate(p.date)]),
            el('span',{},[`${p.minutes} min`])
          ]),
          el('p',{class:'muted mt-2'},[p.excerpt]),
          el('div',{class:'mt-3 flex flex-wrap gap-2'},p.tags.map(t=>el('span',{class:'tag bg-white'},[t]))),
          el('div',{class:'mt-4'},[
            el('button',{class:'btn',onClick:()=>{state.readingId=p.id;render();}},['Read Article'])
          ])
        ])
      ]);

      function ArticleView(post){
        const shareUrl=encodeURIComponent(location.href);const shareText=encodeURIComponent(post.title);
        return el('section',{class:'container mx-auto px-4 py-10 max-w-3xl'},[
          el('button',{class:'btn-ghost mb-4',onClick:()=>{state.readingId=null;render();}},['← Back']),
          el('h1',{class:'text-3xl md:text-4xl font-bold'},[post.title]),
          el('div',{class:'muted text-sm flex items-center gap-3 mt-2'},[
            el('span',{},[post.author]),
            el('span',{},['• '+fmtDate(post.date)]),
            el('span',{},[`${post.minutes} min read`])
          ]),
          el('div',{class:'mt-6 rounded-2xl overflow-hidden'},[
            el('img',{src:post.hero,alt:'hero',class:'w-full object-cover'})
          ]),
          el('article',{class:'prose prose-slate max-w-none mt-8'},[
            el('div',{innerHTML:post.body})
          ]),
          el('div',{class:'mt-6 flex flex-wrap gap-2'},post.tags.map(t=>el('span',{class:'tag bg-white'},[t]))),
          el('div',{class:'mt-8 flex items-center gap-3 text-sm'},[
            el('span',{class:'muted'},['Share this article:']),
            el('a',{class:'underline',href:`https://twitter.com/intent/tweet?text=${shareText}&url=${shareUrl}`,target:'_blank'},['X']),
            el('a',{class:'underline',href:`https://www.linkedin.com/sharing/share-offsite/?url=${shareUrl}`,target:'_blank'},['LinkedIn'])
          ])
        ]);
      }

      const NewsletterCard=()=>el('div',{class:'card p-6'},[
        el('h3',{class:'text-lg font-semibold'},['Weekly Brief — AI x MechEng']),
        el('p',{class:'muted mt-1'},['Ringkasan taktis untuk reliability & efficiency. Masukkan email untuk update (demo).']),
        el('div',{class:'mt-4 flex gap-2'},[
          el('input',{type:'email',placeholder:'you@example.com',class:'rounded-2xl border px-3 py-2 flex-1'}),
          el('button',{class:'btn'},['Subscribe'])
        ]),
        el('p',{class:'text-xs muted mt-2'},['Form demo. Integrasikan ke EmailJS/Mailchimp bila perlu.'])
      ]);

      const Service=(title,desc)=>el('div',{class:'card p-5'},[
        el('h3',{class:'font-semibold'},[title]),
        el('p',{class:'muted mt-1'},[desc])
      ]);

      const WorkCard=(title,img,desc)=>el('div',{class:'card overflow-hidden'},[
        el('img',{src:img,class:'w-full h-36 object-cover'}),
        el('div',{class:'p-4'},[
          el('div',{class:'font-semibold'},[title]),
          el('p',{class:'muted text-sm'},[desc])
        ])
      ]);

      // -------- ROUTER --------
      function DemosView(){
        return el('section',{class:'container mx-auto px-4 py-10'},[
          el('h2',{class:'text-2xl font-bold mb-4'},['Demos Interaktif (Mock)']),
          el('div',{class:'grid md:grid-cols-3 gap-6'},DEMOS.map(DemoCard))
        ]);
      }

      function DemoCard(d){return el('div',{class:'card p-5'},[
        el('div',{class:'font-semibold'},[d.title]),
        el('p',{class:'muted mt-1'},[d.desc]),
        el('div',{class:'mt-3 flex flex-wrap gap-2'},d.steps.map(s=>el('span',{class:'tag bg-white'},[s]))),
        el('pre',{class:'mt-4 bg-slate-50 p-3 rounded-xl overflow-auto text-xs'},[d.code])
      ])}

      function render(){
        const app=document.getElementById('app');
        app.innerHTML='';
        let view;
        if(state.readingId) view=ArticleView(byId(state.readingId));
        else if(state.route==='home') view=HomeView();
        else if(state.route==='articles') view=ArticlesView();
        else if(state.route==='services') view=ServicesView();
        else if(state.route==='portfolio') view=PortfolioView();
        else if(state.route==='about') view=AboutView();
        else if(state.route==='contact') view=ContactView();
        else if(state.route==='demos') view=DemosView();
        app.append(view);
      }

      HeaderActions();
      render();
    </script>
  </body>
</html>
