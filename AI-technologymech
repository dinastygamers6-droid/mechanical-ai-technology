      const DEMOS = [
        { id:'demo-vibration', title:'Demo: Fitur Vibrasi & Klasifikasi Bearing',
          desc:'Ekstraksi fitur RMS, kurtosis, dan peak frequency dari sinyal contoh lalu klasifikasi sehat vs rusak (simulasi).',
          steps:['Upload CSV akselerasi','Hitung fitur','Prediksi kelas'],
          code:`// pseudo: fitur vibrasi\nconst rms = (arr)=>Math.sqrt(arr.reduce((s,x)=>s+x*x,0)/arr.length);\nconst kurt = (arr)=>{const m=arr.reduce((s,x)=>s+x,0)/arr.length;const v=arr.map(x=>x-m);const s2=v.reduce((s,x)=>s+x*x,0)/v.length;const s4=v.reduce((s,x)=>s+x**4,0)/v.length;return s4/(s2**2)};\n// klasifikasi sederhana (threshold)\nif(rms(data)>TH1 && kurt(data)>TH2) return 'Critical'; else return 'Normal';`},
        { id:'demo-vision', title:'Demo: Anotasi Cacat (Mock)',
          desc:'Contoh UI anotasi sederhana untuk menandai retak/pitting pada gambar komponen.',
